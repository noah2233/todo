{
  "compilerOptions": {
    "baseUrl": "",
    "paths": {
      "@services/*": ["app/services/*"],
      "@core/*": ["app/core/*"],
      "@shared/*": ["app/shared/*"],
    },
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ]
  }
}